{
    "name": "n8n-nodes-firestore-connection",
    "version": "0.1.0",
    "description": "Um node n8n para interagir com o Google Cloud Firestore.",
    "license": "MIT",
    "author": {
        "name": "Saulo",
        "email": "saulo.eduita@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SauloEdu/firebaseCloudFirestoreNodeN8N.git"
    },
    "main": "dist/nodes/CloudFirestore/CloudFirestore.node.js",
    "scripts": {
        "build": "tsc --project tsconfig.json && gulp build:icons",
        "dev": "tsc --watch",
        "format": "prettier --write nodes credentials",
        "lint": "eslint nodes credentials --ext .ts --fix",
        "lint:fix": "eslint nodes credentials --ext .ts --fix",
        "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "n8nNodesApiVersion": 1,
        "credentials": [
            "dist/credentials/CloudFirestoreCredentials.credentials.js"
        ],
        "nodes": [
            "dist/nodes/CloudFirestore/CloudFirestore.node.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/request-promise-native": "~1.0.15",
        "@typescript-eslint/parser": "~5.45",
        "eslint-plugin-n8n-nodes-base": "^1.11.0",
        "gulp": "^4.0.2",
        "n8n-core": "^0.150.0",
        "n8n-workflow": "^0.120.0",
        "prettier": "^2.7.1",
        "typescript": "~4.8.4"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.0.0"
    }
}